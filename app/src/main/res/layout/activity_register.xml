<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner_dull"
    tools:context=".Register">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/backforregister"
        app:layout_constraintStart_toStartOf="parent" >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardforusername"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24sp"
            app:cardBackgroundColor="#F4F9FE"
            android:layout_marginRight="24sp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato"
                    android:layout_marginRight="20sp"
                    android:background="#F4F9FE"
                    android:text="User name"
                    android:textColor="#A8C3EC"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="20sp"
                    android:background="#F4F9FE"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/lato"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/cardforemail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="#F4F9FE"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/consbackround"
            android:layout_marginTop="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardforusername"
>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#F4F9FE"
                    android:text="E-mail"
                    android:fontFamily="@font/lato"
                    android:textColor="#A8C3EC"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    android:background="#F4F9FE"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewemail" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:id="@+id/cardforphonenumber"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="#F4F9FE"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/consbackround"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardforemail"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.4"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="#F4F9FE"
                        android:fontFamily="@font/lato"
                        android:text="Phone number"
                        android:textColor="#A8C3EC"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_marginLeft="24dp"
                            android:layout_height="match_parent"
                            android:id="@+id/ccode"
                            android:text="+91"
                            android:textFontWeight="400"
                            android:textColor="#A8C3EC"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:textSize="20sp"
                            />

                        <EditText
                            android:id="@+id/Phonenumber"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="match_parent"
                            android:autoSizeTextType="uniform"
                            android:background="#F4F9FE"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:textSize="20sp"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Amount" />



                    </LinearLayout>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    app:cardCornerRadius="10dp"
                    android:background="#F4F9FE"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/download"
                        android:layout_gravity="start|center_horizontal"
                        android:background="#F4F9FE"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/rippleforconsbackround"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/getstarted"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            app:layout_constraintTop_toBottomOf="@+id/cardforphonenumber"
            tools:layout_editor_absoluteX="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/getstarted"
            android:layout_marginTop="20sp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="118dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="20sp"
                android:text="Already have an account?"
                android:gravity="end|center"
                android:fontFamily="@font/lato"
                android:textSize="12sp"
                android:textColor="#A8C3EC"
                />

            <TextView
                android:id="@+id/Loginforregister"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:fontFamily="@font/lato_bold"
                android:gravity="start|center"
                android:text=" Log In"
                android:textColor="#A8C3EC"
                android:textSize="14dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>